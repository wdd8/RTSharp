<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:RTSharp.Shared.Controls.Views;assembly=RTSharp.Shared.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="32"
             x:Name="folderSelection"
             x:Class="RTSharp.Shared.Controls.Views.FolderSelection">
    <DockPanel DataContext="{Binding ElementName=folderSelection}">
        <Button VerticalAlignment="Center" Margin="8,0,0,0" DockPanel.Dock="Right" Click="EvBrowse">Browse...</Button>
        <TextBox Name="Box" Text="{Binding Value}" />
    </DockPanel>
</UserControl>
